
{
  "manifest_version": 2,

  "name": "News in Moderation",
  "description": "Let's get a little bit closer.",
  "version": "1.0",

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "bookmarks"
  ]
}
